---
const { name, title } = Astro.props;
---

<article>
  <div class="info">
    <h2 class="name">{name}</h2>
    <h3 class="title">{title}</h3>
  </div>
  <div class="content">
    <slot />
  </div>
  <img class="quote" src="/img/svg/quote.svg" alt="quote icon" />
</article>

<style>
  article {
    background-color: var(--secondary);
    height: 15rem;
    margin: 2rem;
    position: relative;
    box-shadow:
      0px 1px 3px rgba(210, 210, 210, 0.8),
      0px 4px 10px rgba(210, 210, 210, 0.8);
  }
  .info {
    border-bottom: thin dashed var(--accent);
    padding: 2rem 2rem 0.5rem;
  }
  .content {
    padding: 1rem 2rem 2rem;
  }

  .name {
    text-transform: capitalize;
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .title {
    text-transform: none;
    font-size: 0.8rem;
  }

  .quote {
    position: absolute;
    width: 3rem;
    top: 1.5rem;
    right: 1.5rem;
  }
</style>
