---
const { heading } = Astro.props;
---

<section>
  <h2>{heading}</h2>
  <slot />
</section>

<style>
  section {
    background-color: var(--primary);
    width: 100%;
    padding: 3rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  h2 {
    color: var(--secondary);
    margin-bottom: 2rem;
  }
</style>
