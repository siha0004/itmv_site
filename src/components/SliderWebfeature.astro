<div class="carousel">
  <div carousel-item>
    <CardWebfeature name="Ira" title="Syerske" img="ira_karrusel.webp" />
  </div>
  <div carousel-item>
    <CardWebfeature name="Oleena" title="Syerske" img="oleena_karrusel.webp" />
  </div>
  <div carousel-item>
    <CardWebfeature name="Luna" title="Designassistent" img="luna_karrusel.webp" />
  </div>
  <style>
    .carousel {
      display: flex;
      flex-direction: row;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      -ms-overflow-style: none;
      /* Set a minimum width to ensure horizontal scrolling */
      min-width: 100%;
      /* Allow items to wrap if they exceed container width */
      flex-wrap: nowrap;
    }

    .carousel::-webkit-scrollbar {
      display: none;
    }

    .carousel-item {
      width: 200px; /* eller en hvilken som helst anden Ã¸nsket bredde */
    }
  </style>
